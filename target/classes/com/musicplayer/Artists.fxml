<HBox fx:id="artistsHBox" visible="false" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicplayer.controller.ArtistsController">
   <children>
      <ListView fx:id="artistsListView" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="250.0" styleClass="artists-list-view" />
      <VBox HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="artistNameLabel" styleClass="artist-name">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></Label>
            <ScrollPane fitToWidth="true">
               <content>
                  <VBox fx:id="artistAlbumsVBox" />
              </content>
            </ScrollPane>
         </children>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
